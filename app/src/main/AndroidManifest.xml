<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neil.sonyvaio.billapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo5"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.neil.sonyvaio.billapp.SplashScreen"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neil.sonyvaio.billapp.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.neil.sonyvaio.billapp.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.neil.sonyvaio.billapp.Main2Activity" />
        <activity
            android:name="com.neil.sonyvaio.billapp.offerpage"
            android:label="@string/title_activity_offerpage" />
        <activity android:name="com.neil.sonyvaio.billapp.aboutpage" />
        <activity android:name="com.neil.sonyvaio.billapp.payement"></activity>
    </application>

</manifest>
